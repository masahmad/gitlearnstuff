.features-table {

  overflow: hidden;
  font-size: 40px;
  font-family: arial;
  font-weight:600;


border-collapse: separate; /* Or do nothing, this is default */
  border-spacing: 10px; /* Only works if border-collapse is separate */
  border: 5px ridge #bbb;
  box-shadow: 25px 25px 25px #ccc;
  border-radius: 30px;
  width: 98%;
  
  margin:auto;
  margin-top: 10px;

  color:#ddd;


}



.features-table  thead tr:first-child td:first-child ,tbody tr:first-child td:first-child{
  width:80%;
} 


